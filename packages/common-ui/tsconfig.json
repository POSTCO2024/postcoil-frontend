{
  "extends": "@postcoil/tsconfig/vite.json",
  "compilerOptions": {
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@postcoil/ui": [
        "./components"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.scss"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "postcss.config.js"
  ]
}