{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "apps/main/dist/**",
        "apps/control/dist/**",
        "apps/operation/dist/**"
      ]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "outputs": [
        "apps/main/dist/**",
        "apps/control/dist/**",
        "apps/operation/dist/**"
      ]
    }
  }
}
